#include <stdio.h>

int main()
{
    int binary_1;
    printf("BINARY NUMBER CONVERSION 1-15\n");
    printf("Enter a decimal value from 0-15\n");
    scanf("%d", &binary_1);
    
    switch(binary_1)
    {
        case 0: printf("0");
        break;
        case 1: printf("1");
        break;
        case 2: printf("10");
        break;
        case 3: printf("11");
        break;
        case 4: printf("100");
        break;
        case 5: printf("101");
        break;
        case 6: printf("110");
        break;
        case 7: printf("111");
        break;
        case 8: printf("1000");
        break;
        case 9: printf("1001");
        break;
        case 10: printf("1010");
        break;
        case 11: printf("1011");
        break;
        case 12: printf("1100");
        break;
        case 13: printf("1101");
        break;
        case 14: printf("1110");
        break;
        case 15: printf("1111");
        break;
    }
    

    return 0;
}
