#define LEADER_CHAR '^'
#define DIAGONAL_CHAR '@'
#include <stdio.h>
int main()
{
    int userf, lineCount, charCount;
    printf("Enter any positive decimal integer value\n");
    scanf("%d", &userf);
    for (lineCount= 0; lineCount < userf; lineCount++) {
        
        for(charCount=1; charCount<=lineCount; charCount++)
            {
                
                printf("%c",LEADER_CHAR);
                
            }
            
          
            printf("%c\n", DIAGONAL_CHAR);
        
        
    }

    return 0;
}
