/*This is a simple program that prompts the user to guess the word and it loops until they correctly enter the word necessary*/

#include <stdio.h>

int main()
{
    char letter_1, letter_2, letter_3, letter_4;
    printf("What is the word that I am thinking of?\n");
    printf("Enter the first letter: ");
    scanf("%c", &letter_1);
    
    switch(letter_1)
    {
        case 'l':
        break;
        
        default:
           do
           {
               printf("\nEnter the first letter: ");
               scanf("%c", &letter_1);
           }
           while (letter_1 != 'l');
               
        break;    
    }
    
    printf("Enter the second letter: ");
    scanf("%c", &letter_2);
    
    switch(letter_2)
    {
        case 'o':
        break;
        
        default:
            do
            {
                printf("\nEnter the second letter: ");
                scanf("%c", &letter_2);
                
            }
            while (letter_2 != 'o');
        break;    
    }
    
    printf("Enter the third letter: ");
    scanf("%c", &letter_3);
    
    switch(letter_3)
    {
        case 'v':
        break;
        default:
            do
            {
                printf("\nEnter the third letter: ");
                 scanf("%c", &letter_3);
            }
            while (letter_3 != 'v');
        break;   
    }
    
    printf("Enter the fourth letter: ");
    scanf("%c", &letter_4);
    
    switch(letter_4)
    {
        case 'e':
        break;
        default:
            do
            {
                printf("\nEnter the fourth letter: ");
                scanf("%c", &letter_4);
            }
                
            while (letter_4 != 'e');
        break;    
    }
    
    printf("My word is LOVE\n");
   
   
    
    

    return 0;
}
